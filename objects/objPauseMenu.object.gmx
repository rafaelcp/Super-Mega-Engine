        <arguments>
          <argument>
            <kind>1</kind>
            <string>switch phase
{
    case 0: //Fading in
        blackAlphaTimer += 1;
        if blackAlphaTimer &gt;= blackAlphaTimerMax
        {
            blackAlphaTimer = 0;
            blackAlpha += blackAlphaIncrease;
            if blackAlpha &gt;= 1
                phase = 1;
        }
    break;
    
    case 1: //Fading out
        event_user(0); //Moving the selection
            
        blackAlphaTimer += 1;
        if blackAlphaTimer &gt;= blackAlphaTimerMax
        {
            blackAlphaTimer = 0;
            blackAlpha -= blackAlphaIncrease;
            if blackAlpha &lt;= 0
                phase = 2;
        }
    break;
    
    case 2: //Idle
        event_user(0); //Moving the selection
            
        
        //Select the weapon/tank
        if global.keyJumpPressed || global.keyPausePressed || global.keyShootPressed
        {
            if option != global.totalWeapons &amp;&amp; option != global.totalWeapons+1
            {
                phase = 3;
                global.currentWeapon = option;
                with prtPlayerProjectile instance_destroy();
                with objReflectedProjectile instance_destroy();
                with prtRush instance_destroy();
                with objRushJet instance_destroy(); //Could not be parented to prtRush since it's parented to prtMovingPlatformSolid
                with objMegaman
                {
                    if onRushJet == true
                    {
                        onRushJet = false;
                        canMove = true;
                    }
                }
                
                playSFX(sfxMenuSelect);
            }
            else if option == global.totalWeapons
            {
                if global.eTanks &gt; 0 &amp;&amp; global._health &lt; global.maxHealth
                {
                    option = 99; //Nothing selected
                    phase = 5;
                    global.eTanks -= 1;
                    eTankTimer = 0;
                    loopSFX(sfxEnergyRestore);
                }
                else
                {
                    playSFX(sfxError);
                }
            }
            else if option == global.totalWeapons+1
            {
                if global.mTanks &gt; 0
                {
                    var proceed;
                    proceed = false;
                    for(i = 1; i &lt; global.totalWeapons; i ++)
                    {
                        if ceil(global.ammo[i]) &lt; global.maxAmmo
                            proceed = true;
                    }
                    
                    if ceil(global._health) &lt; global.maxHealth
                        proceed = true;
                        
                    if proceed == true //If proceed is still false after the past calculations, it seems there is nothing to fill
                    {
                        option = 99; //Nothing selected
                        phase = 6;
                        global.mTanks -= 1;
                        eTankTimer = 0;
                        loopSFX(sfxEnergyRestore);
                    }
                    else
                    {
                        playSFX(sfxError);
                    }
                }
                else
                {
                    playSFX(sfxError);
                }
            }
        }
    break;
    
    case 3: //Fading out
        blackAlphaTimer += 1;
        if blackAlphaTimer &gt;= blackAlphaTimerMax
        {
            blackAlphaTimer = 0;
            blackAlpha += blackAlphaIncrease;
            if blackAlpha &gt;= 1
            {
                phase = 4;
                if resetWeapon == true
                {
                    global.weapon = oldWeapon;
                    with objMegaman event_user(0);
                }
            }
        }
    break;
    
    case 4: //Fading in
        blackAlphaTimer += 1;
        if blackAlphaTimer &gt;= blackAlphaTimerMax
        {
            blackAlphaTimer = 0;
            blackAlpha -= blackAlphaIncrease;
            if blackAlpha &lt;= 0
            {
                global.frozen = false;
                instance_destroy();
            }
        }
    break;
    
    case 5: //E-Tank restoring health
        if global._health &lt; global.maxHealth
        {
            eTankTimer += 1;
            if eTankTimer &gt;= 3
            {
                global._health += 1;
                if global._health &gt; global.maxHealth
                    global._health = global.maxHealth;
                eTankTimer = 0;
            }
        }
        else
        {
            eTankTimer = 0;
            phase = 2;
            option = oldWeapon;
            global.weapon = oldWeapon;
            with objMegaman event_user(0);
            stopSFX(sfxEnergyRestore);
        }
    break;
    
    case 6: //M-Tank restoring energy
        eTankTimer += 1; //While it's technically an M-tank, we can use the same timer as the E-tank without any problems, since the two can't fill at the same time
        if eTankTimer &gt;= 3
        {
            eTankTimer = 0;
            
            var proceed;
            proceed = false;
            for(i = 1; i &lt; global.totalWeapons; i++)
            {
                if global.ammo[i] &lt; global.maxAmmo
                {
                    global.ammo[i] += 1;
                    if global.ammo[i] &gt; global.maxAmmo
                        global.ammo[i] = global.maxAmmo;
                        
                    proceed = true;
                }
            }
            
            if global._health &lt; global.maxHealth
            {
                global._health += 1;
                if global._health &gt; global.maxHealth
                    global._health = global.maxHealth;
                    
                proceed = true;
            }
            
            if proceed == false //If proceed is still false after all these calculations, it means everything has been filled
            {
                eTankTimer = 0;
                phase = 2;
                option = oldWeapon;
                global.weapon = oldWeapon;
                with objMegaman event_user(0);
                stopSFX(sfxEnergyRestore);
            }
        }              
    break;
}
